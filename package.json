{
  "name": "translation-reference-for-i18n-json",
  "displayName": "Translation Reference for i18n JSON Files",
  "description": "Quick lookup, search, and copy translation text nested in a json file.",
  "version": "0.0.2",
  "license": "MIT",
  "icon": "translation_extension_icon.png",
  "author": {
    "name": "Travis Lawrence",
    "email": "travis.lawrence12@gmail.com"
  },
  "publisher": "TravisLawrence",
  "engines": {
    "vscode": "^1.94.0"
  },
  "repository": {
    "url": "https://github.com/TravisL12/translation-reference-i18n-json-files"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:json",
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:typescriptreact",
    "onHover"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "JsonTextLookup",
      "properties": {
        "translation-reference-for-i18n-json.jsonFilePath": {
          "type": "string",
          "default": "./data.json",
          "description": "Path to the JSON file used for hover tooltips"
        }
      }
    },
    "commands": [
      {
        "command": "extension.findAllSearch",
        "title": "Translation search"
      },
      {
        "command": "extension.copyText",
        "title": "Copy Text"
      }
    ],
    "languages": [
      {
        "id": "json",
        "aliases": [
          "JSON",
          "json"
        ],
        "extensions": [
          ".json"
        ]
      },
      {
        "id": "javascript",
        "extensions": [
          ".js",
          ".jsx"
        ]
      },
      {
        "id": "typescript",
        "extensions": [
          ".ts"
        ],
        "aliases": [
          "TypeScript",
          "ts"
        ]
      },
      {
        "id": "typescriptreact",
        "extensions": [
          ".tsx"
        ],
        "aliases": [
          "TypeScript React",
          "tsx"
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.94.0",
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "eslint": "^9.13.0",
    "typescript": "^5.6.3",
    "ts-loader": "^9.5.1",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
